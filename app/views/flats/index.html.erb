<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>

  <% @flats.each do |flat| %>
  <div class="flat-card-content">
    <div class="flat-card-title">
      <h4><%= flat.name %></h4>
    </div>
    <p><%= flat.address %></p>
    <div class="flex">
      <i class="fas fa-user-friends"><%= flat.number_of_guests %></i>
      <% end %>
    </div>
  </div>


</div>
